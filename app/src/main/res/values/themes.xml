<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Recipes" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/green1</item>
        <item name="android:statusBarColor" >@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="chipStyle">@style/Widget.recipe.Chip</item>
    </style>

    <style name="Theme.Recipes" parent="Base.Theme.Recipes" />

    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="CustomFabShape" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="MakeRecipeButton">
        <item name="backgroundColor">@color/green3</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="CustomInputEditText">
        <item name="boxStrokeColor">#888888</item>
    </style>

</resources>