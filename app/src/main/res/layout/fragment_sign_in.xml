<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.fragment.SignInFragment">

    <TextView
        android:id="@+id/tv_top_banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_in_fragment_top_banner_text"
        style="@style/top_banner_text_style"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/gl_top"/>

    <ImageView
        android:id="@+id/iv_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/gl_top"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/top_banner_left_icon_margin"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="@dimen/top_banner_height"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/fragment_horizontal_margin"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/fragment_horizontal_margin"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/et_id_layout"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginTop="@dimen/default_margin_16"
        app:layout_constraintStart_toStartOf="@id/gl_start"
        app:layout_constraintEnd_toEndOf="@id/gl_end"
        app:layout_constraintTop_toBottomOf="@+id/gl_top">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/sign_in_fragment_id_hint"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/et_pw_layout"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginTop="@dimen/default_margin_16"
        app:layout_constraintStart_toStartOf="@id/gl_start"
        app:layout_constraintEnd_toEndOf="@id/gl_end"
        app:layout_constraintTop_toBottomOf="@+id/et_id_layout">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_pw"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/sign_in_fragment_pw_hint"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/bt_sign_in"
        android:layout_width="0dp"
        android:layout_height="@dimen/default_button_height"
        android:text="@string/sign_in_fragment_sign_in_button_text"
        android:layout_marginTop="@dimen/default_margin_20"
        app:layout_constraintTop_toBottomOf="@+id/et_pw_layout"
        app:layout_constraintStart_toStartOf="@id/gl_start"
        app:layout_constraintEnd_toEndOf="@id/gl_end"
        android:background="@drawable/button_shape"/>

    <TextView
        android:id="@+id/tv_sign_up_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_in_fragment_sign_up_button_text"
        style="@style/content_text_style"
        android:layout_marginTop="@dimen/default_margin_20"
        app:layout_constraintStart_toStartOf="@id/et_id_layout"
        app:layout_constraintTop_toBottomOf="@id/bt_sign_in"/>

    <TextView
        android:id="@+id/tv_search_pw_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_in_fragment_search_pw_button_text"
        style="@style/content_text_style"
        android:layout_marginTop="@dimen/default_margin_20"
        app:layout_constraintEnd_toEndOf="@id/et_id_layout"
        app:layout_constraintTop_toBottomOf="@id/bt_sign_in"/>



</androidx.constraintlayout.widget.ConstraintLayout>
