<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="190dp"
    android:layout_height="250dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewSpecialty"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivSpecialty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_home_grain" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvSpecialtyName"
        style="@style/content_text_style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintWidth_percent="1"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/item_specialty_name"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/cardViewSpecialty"
        app:layout_constraintTop_toBottomOf="@+id/cardViewSpecialty" />

    <TextView
        android:id="@+id/tvSpecialtyRegion"
        style="@style/content_text_style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintWidth_percent="1"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/item_specialty_region"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tvSpecialtyName"
        app:layout_constraintTop_toBottomOf="@+id/tvSpecialtyName" />

</androidx.constraintlayout.widget.ConstraintLayout>