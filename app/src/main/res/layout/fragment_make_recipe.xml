<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.fragment.MakeRecipeFragment">


    <TextView
        android:id="@+id/tv_top_banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/make_recipe_fragment_top_banner_text"
        style="@style/top_banner_text_style"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/gl_top"/>

    <ImageView
        android:id="@+id/iv_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/gl_top"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/top_banner_left_icon_margin"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="@dimen/top_banner_height"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/fragment_horizontal_margin"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/fragment_horizontal_margin"/>

    <Button
        android:id="@+id/bt_make_recipe"
        android:layout_width="0dp"
        android:layout_height="@dimen/default_button_height"
        android:text="@string/make_recipe_fragment_make_button_text"
        android:enabled="false"
        app:layout_constraintStart_toStartOf="@+id/gl_start"
        app:layout_constraintEnd_toEndOf="@id/gl_end"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/default_margin_20"
        android:background="@drawable/button_shape"/>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintStart_toStartOf="@id/gl_start"
        app:layout_constraintEnd_toEndOf="@id/gl_end"
        app:layout_constraintTop_toTopOf="@id/gl_top"
        app:layout_constraintBottom_toTopOf="@id/bt_make_recipe">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin_20"
                android:text="@string/make_recipe_fragment_recipe_name_indic"
                style="@style/content_text_style_high_light_small"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="@dimen/default_padding">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_recipe_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/make_recipe_fragment_recipe_name_indic"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin_20"
                android:text="@string/make_recipe_fragment_recipe_description_indic"
                style="@style/content_text_style_high_light_small"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="@dimen/default_padding">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_recipe_description"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/make_recipe_fragment_recipe_description_hint"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin_20"
                android:text="@string/make_recipe_fragment_recipe_cooking_time_indic"
                style="@style/content_text_style_high_light_small"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="@dimen/default_padding">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_cooking_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/make_recipe_fragment_recipe_cooking_time_hint"/>
            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin_20"
                android:text="@string/make_recipe_fragment_recipe_ingredient_indic"
                style="@style/content_text_style_high_light_small"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="@dimen/default_padding">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_ingredient"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/make_recipe_fragment_recipe_ingredient_hint"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin_20"
                android:text="@string/make_recipe_fragment_recipe_cooking_process_indic"
                style="@style/content_text_style_high_light_small"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="@dimen/default_padding">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_cooking_process"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/make_recipe_fragment_recipe_cooking_process_hint"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin_20"
                android:text="@string/make_recipe_fragment_recipe_photo_indic"
                style="@style/content_text_style_high_light_small"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_padding"
                android:layout_marginBottom="@dimen/default_margin_20"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_image_add_button"
                    android:layout_width="108dp"
                    android:layout_height="108dp"
                    android:layout_gravity="bottom"
                    android:src="@drawable/ic_image_add"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_images"
                    android:layout_marginStart="@dimen/default_margin_20"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:orientation="horizontal"/>

            </LinearLayout>

        </LinearLayout>



    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>