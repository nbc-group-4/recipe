<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.fragment.RecipeDetailFragment">


    <ImageButton
        android:id="@+id/ib_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:tint="@color/black"
        android:src="@drawable/ic_back_arrow"
        android:layout_marginStart="@dimen/top_banner_left_icon_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/gl_top"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/top_banner_text_style"
        android:text="레시피"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/gl_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/iv_more_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/gl_top"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/top_banner_left_icon_margin"
        android:src="@drawable/ic_more"/>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="@dimen/top_banner_height"/>
    
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintTop_toTopOf="@id/gl_top"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="@dimen/fragment_horizontal_margin"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="@dimen/fragment_horizontal_margin"/>

            <ImageView
                android:id="@+id/iv_detail_img"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1.3f"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/tv_detail_title"
                style="@style/top_banner_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="레시피명"
                android:layout_marginTop="@dimen/default_margin_20"
                app:layout_constraintStart_toStartOf="@id/gl_start"
                app:layout_constraintTop_toBottomOf="@id/iv_detail_img"/>

            <ImageView
                android:id="@+id/iv_bookmark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_bookmark_empty"
                app:layout_constraintTop_toTopOf="@id/tv_detail_title"
                app:layout_constraintBottom_toBottomOf="@id/tv_detail_title"
                app:layout_constraintEnd_toEndOf="@id/gl_end"/>

            <View
                android:id="@+id/v_title_divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/default_margin_20"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_detail_title"
                android:background="@color/divider_color"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_image_writer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="@id/gl_start"
                app:layout_constraintTop_toBottomOf="@id/v_title_divider"
                android:src="@drawable/ic_info"/>

            <TextView
                android:id="@+id/tv_detail_writer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="작성자"
                android:textStyle="bold"
                android:layout_marginStart="4dp"
                app:layout_constraintStart_toEndOf="@id/iv_image_writer"
                app:layout_constraintTop_toTopOf="@id/iv_image_writer"
                app:layout_constraintBottom_toBottomOf="@id/iv_image_writer"/>

            <View
                android:id="@+id/v_writer_divider"
                android:layout_width="0dp"
                android:layout_height="8dp"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_image_writer"
                android:background="#F5F5F5"/>

            <ImageView
                android:id="@+id/iv_recipe_description_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin_20"
                app:layout_constraintStart_toStartOf="@id/gl_start"
                app:layout_constraintTop_toBottomOf="@id/v_writer_divider"
                android:src="@drawable/ic_recipe_description"/>


            <TextView
                android:id="@+id/tv_recipe_explain"
                style="@style/content_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recipe_base_explain"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@id/iv_recipe_description_icon"
                app:layout_constraintBottom_toBottomOf="@id/iv_recipe_description_icon"
                app:layout_constraintStart_toEndOf="@id/iv_recipe_description_icon"/>

            <TextView
                android:id="@+id/tv_difficulty"
                style="@style/content_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/recipe_difficulty"
                app:layout_constraintStart_toStartOf="@id/gl_start"
                app:layout_constraintTop_toBottomOf="@id/iv_recipe_description_icon" />

            <LinearLayout
                android:id="@+id/ll_star_view_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/tv_difficulty"
                app:layout_constraintBottom_toBottomOf="@id/tv_difficulty"
                app:layout_constraintStart_toEndOf="@id/tv_difficulty"
                android:layout_marginStart="12dp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/iv_star_empty1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_star_empty"/>

                <ImageView
                    android:id="@+id/iv_star_empty2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_star_empty" />

                <ImageView
                    android:id="@+id/iv_star_empty3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_star_empty" />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_cooking_time"
                style="@style/content_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/recipe_cooking_time"
                app:layout_constraintStart_toStartOf="@id/gl_start"
                app:layout_constraintTop_toBottomOf="@+id/tv_difficulty"/>


            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/content_text_style"
                android:text="30분"
                android:textStyle="bold"
                android:layout_marginStart="12dp"
                app:layout_constraintTop_toTopOf="@+id/tv_cooking_time"
                app:layout_constraintBottom_toBottomOf="@id/tv_cooking_time"
                app:layout_constraintStart_toEndOf="@id/tv_cooking_time"/>

            <View
                android:id="@+id/v_recipe_description_divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/default_margin_20"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_cooking_time"
                android:background="@color/divider_color"/>

            <ImageView
                android:id="@+id/iv_recipe_ingredient_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin_20"
                app:layout_constraintStart_toStartOf="@id/gl_start"
                app:layout_constraintTop_toBottomOf="@id/v_recipe_description_divider"
                android:src="@drawable/ic_recipe_ingredient"/>


            <TextView
                android:id="@+id/tv_recipe_ingredient"
                style="@style/content_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recipe_ingredient_title"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@id/iv_recipe_ingredient_icon"
                app:layout_constraintBottom_toBottomOf="@id/iv_recipe_ingredient_icon"
                app:layout_constraintStart_toEndOf="@id/iv_recipe_ingredient_icon" />

            <TextView
                android:id="@+id/tv_detail_ingredients"
                style="@style/content_text_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="@id/gl_start"
                app:layout_constraintEnd_toEndOf="@id/gl_end"
                app:layout_constraintTop_toBottomOf="@id/iv_recipe_ingredient_icon"/>


            <View
                android:id="@+id/v_recipe_ingredient_divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/default_margin_20"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_detail_ingredients"
                android:background="@color/divider_color"/>

            <ImageView
                android:id="@+id/iv_recipe_procedure_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin_20"
                app:layout_constraintStart_toStartOf="@id/gl_start"
                app:layout_constraintTop_toBottomOf="@id/v_recipe_ingredient_divider"
                android:src="@drawable/ic_recipe_procedure"/>


            <TextView
                android:id="@+id/tv_detail_steps"
                style="@style/content_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/recipe_steps"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@id/iv_recipe_procedure_icon"
                app:layout_constraintBottom_toBottomOf="@id/iv_recipe_procedure_icon"
                app:layout_constraintStart_toEndOf="@id/iv_recipe_procedure_icon"/>

            <TextView
                android:id="@+id/tv_recipe_steps"
                style="@style/content_text_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="@id/gl_start"
                app:layout_constraintEnd_toEndOf="@id/gl_end"
                app:layout_constraintTop_toBottomOf="@id/iv_recipe_procedure_icon"/>

            <View
                android:layout_width="0dp"
                android:layout_height="60dp"
                app:layout_constraintStart_toStartOf="@id/gl_start"
                app:layout_constraintEnd_toEndOf="@id/gl_end"
                app:layout_constraintTop_toBottomOf="@id/tv_recipe_steps"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>